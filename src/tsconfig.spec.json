{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/spec",
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es5",
    "types": [
      "jasmine",
      "node"
    ],
    "paths": {
      "@nebular/*": [
        "./framework/*/public_api.ts"
      ],
      "@nebular/theme/*": [
        "./framework/theme/*"
      ],
      "@nebular/auth/*": [
        "./framework/auth/*"
      ]
    }
  },
  "files": [
    "test.ts",
    "polyfills.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ],
  "exclude": [
    "**/schematics/**/*.spec.ts"
  ]
}
